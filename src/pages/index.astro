---
import Base from '../layouts/Base.astro';

export const prerender = true;

const title = 'Graph';
const description = 'Track a daily number and visualize trends over time.';

const websiteJsonLd = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: title,
  url: Astro.site?.toString() ?? Astro.url.toString(),
};
---

<Base title={title} description={description}>
  <Fragment slot="head">
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.site?.toString() ?? Astro.url.toString()} />
    <meta name="twitter:card" content="summary" />
    <script type="application/ld+json">{JSON.stringify(websiteJsonLd)}</script>
  </Fragment>

  <main class="lp">
    <div class="lp-card">
      <h1 class="lp-title">{title}</h1>
      <p class="lp-subtitle">{description}</p>
      <div class="lp-actions">
        <a class="lp-primary" href="/sign-in">Sign in</a>
        <a class="lp-secondary" href="/app">Go to app</a>
      </div>
    </div>
  </main>
</Base>

